{
  "project": {
    "projectName": "FuckScaffold",
    "js": {
      "src": "client/js/src",
      "local": "static/js",
      "build": "build/js"
    },
    "css": {
      "src": "client/sass",
      "local": "static/css",
      "build": "build/css"
    }
  },
  "hash": [
    {
      "src": "build/**/*.js",
      "type": "json",
      "dest": "server/config/version_js.json",
      "recordTpl": "  \"<%= prefix %><%= name %>\": \"<%= path %>\""
    },
    {
      "src": "build/**/*.css",
      "type": "json",
      "dest": "server/config/version_css.json",
      "recordTpl": "  \"<%= prefix %><%= name %>\": \"<%= path %>\""
    }
  ],
  "cdn": {
    "basic": {
      "src": ["build/**/*.js", "build/**/*.css"],
      "dist": "/marx/build"
    }
  },
  "build": {
    "extra": {
      "commonModule": "superman.bundle.json",
      "appendEntry": true,
      "esVersion": 7,
      "sourceMap": false
    },
    "confPath": "superman.webpack.js"
  }
}
